export DISABLE_AUTO_TITLE="true"

# Python
export PATH=$HOME/Library/Python/2.7/bin:$PATH
export PYTHONPATH=$HOME/Library/Python/2.7/lib/python/site-packages:$PYTHONPATH

# Prezto
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Clang
export ARCHFLAGS="-Wno-error=unused-command-line-argument-hard-error-in-future"

# Enable bash-style comments
setopt interactivecomments

# pyenv setup
if which pyenv > /dev/null; then eval "$(pyenv init -)"; fi

# Terminal aliases and functions
alias o="open"
function c() { cd "$@"; ls; }
alias notify="osascript -e 'display notification with title \"Job complete.\"'"

# Shortcut aliases
alias chrome-dev="/Applications/Google\ Chrome\ Canary.app/Contents/MacOS/Google\ Chrome\ Canary --allow-file-access-from-files"

# MacVim aliases
#alias v="mvim"

